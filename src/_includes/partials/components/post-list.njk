{% if postListItems.length %}
  <section class="[ post-list ] [ pad-top-700 gap-bottom-900 ]">
    <div class="[ inner-wrapper ] [ sf-flow ]">
      <h2 class="[ post-list__heading ] [ text-700 md:text-800 ]">{{ postListHeading }}</h2>
      <ol class="[ post-list__items ] [ sf-flow ] [ pad-top-300 ]" reversed>
        {% for item in postListItems %}
          {% if item.date.getTime() <= global.now %}
            <li class="post-list__item">
              
     <a href="{{ item.url }}"><img class="fit-picture" src="{{ item.data.Poster }}"
     alt="Nolan" width="500" style="border-radius: 12px;"></a>
              <h3 class="font-base leading-tight text-600 weight-mid gap-top-500">
                <a href="{{ item.url }}" class="post-list__link" rel="bookmark">{{ item.data.movieTitle }}</a>
              </h3>
              <p class="gap-top-300 weight-mid text-500">
                🍿 IMDb: {{item.data.IMDb}} 📅 {{item.data.Released}} 🎭 {{item.data.Genre}} ⏳ {{item.data.Duration}} <br><br>
              </p>
            </li>
          {% endif %}
        {% endfor %}
      </ol>
    </div>
  </section>
{% endif %}
